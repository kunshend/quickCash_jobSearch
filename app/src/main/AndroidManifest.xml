        <activity
            android:name=".activities.RegistrationActivity"
            android:exported="false" /> <!-- login activity launcher -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- test dashboard -->
        <activity android:name=".activities.DashboardActivity" /> <!-- Reset Password -->
        <activity
            android:name=".activities.EmailVerifyActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SearchJobsActivity" />

        <activity android:name=".activities.JobDetailsActivity"/>

        <activity
            android:name=".activities.ViewApplications"
            android:exported="true" />

        <activity
            android:name=".activities.PostJobActivity"
            android:exported="true" />

        <activity
            android:name=".activities.ApplicationActivity"
            android:exported="true" />

        <activity
            android:name=".activities.MyApplicationsActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.MyJobsActivity"
            android:exported="true" />

        <activity
            android:name=".activities.MyJobsDetailsActivity"
            android:exported="true" />

        <activity
            android:name=".activities.ReviewApplicationActivity"
            android:exported="true" />

        <activity
            android:name=".activities.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ReturnToLoginActivity"
            android:exported="true" />

        <!-- Meta Data for google maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD9L-KqPjfW8kbq9LWKH2tGU8J7Oa9n2n4" />

        <activity android:name=".activities.CompleteAndPayActivity" />

        <!-- Paypal -->
        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <service android:name="com.paypal.android.sdk.payments.PayPalService" />

        <!--registering the service, adding intent filter to it, helps in running it in the background-->
        <service
            android:name=".utilities.FirebaseMessagingServiceManager"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>