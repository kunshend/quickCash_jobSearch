<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/returenButton"
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:contentDescription="Return to dashboard"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/applicationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Applications"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/returenButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/noApplicationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Applications"
        android:textSize="18sp"
        android:textStyle="italic"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/applicationList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for Applications -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycledViewApplicationList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toBottomOf="@id/noApplicationsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
