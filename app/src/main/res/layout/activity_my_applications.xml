<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <!-- Empty State TextView -->
    <TextView
        android:id="@+id/noApplicationsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You haven't applied to any jobs yet"
        android:textSize="18sp"
        android:textStyle="italic"
        android:padding="12dp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- RecyclerView for Applications -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMyApplications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:contentDescription="@string/my_applications_list" />

</LinearLayout>
